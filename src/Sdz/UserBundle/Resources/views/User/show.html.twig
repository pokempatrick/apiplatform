{% extends "SdzUserBundle::user.html.twig" %}

{% block body1 %}
    <h2>Gestion des Utilisateurs : show</h2>
    {% for message in app.session.flashbag.get('info') %}
    <p>{{ message }}</p>
    {% endfor %}
    <table class="record_properties">
        <tbody>
            <!-- <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr> -->
            <tr>
                <th>Email</th>
                <td>{{ entity.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ entity.password }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>

            <tr>
                <th>NIU Utilisateur</th>
                <td>{{ entity.nieuser }}</td>
            </tr>
            <tr>
                <th>Entreprise</th>
                <td>{{ entity.entreprise}}</td>
            </tr>
            <tr>
                <th>NIU Entreprise</th>
                <td>{{ entity.niuentreprise}}</td>
            </tr>

            <tr>
                <th>Magasin</th>
                <td>{{ entity.magasin }}</td>
            </tr>
            
            <tr>
                <th>Numéro Téléphone</th>
                <td>{{ entity.numeroTelephone|number_format(0, '.', ' ') }}</td>
            </tr>
            <tr>
                <th>Service</th>
                <td>{{ entity.service }}</td>
            </tr>
            <tr>
                <th>Limite d'accès</th>
                <td>{{ entity.limitedaccessdate|date('d-m-Y') }}</td>
            </tr>
           <!--  <tr>
                <th>Salt</th>
                <td>{{ entity.salt }}</td>
            </tr> -->
            <tr>
                <th>Roles</th>
                <td>
                    {% for role in entity.roles %}
                        {{ role }}</br>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('user') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('user_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
