{# src/Sdz/UserBundle/Resources/views/Security/login.html.twig #}

{% extends "SdzUserBundle::security.html.twig" %}

{% block body1 %}
<div class="row">
    <div class=" col-md-4 ">
        <h1>Identification</h1>
        {# S'il y a une erreur, on l'affiche dans un joli cadre #}
        {% if error %}
          <div class="alert alert-danger">{{ error.message }}</div>
        {% endif %}
        {% for message in app.session.flashbag.get('info') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
        <form action="{{ path('login_check') }}" method="post">
            <table>
                <tr>
                    <td><label for="username">Login :</label></td>
                    <td><input type="text" id="username" name="_username" value="{{ last_username }}" /></td>
                </tr>
                <tr>
                    <td><label for="password">Mot de passe:</label></td>
                    <td><input type="password" id="password" name="_password" /></td>
                </tr>
            </table>
            <br />
            <input type="submit" value="Connexion" />
        </form>
        <div>
            <a href="{{ path('reset_password') }}">Mot de passe oublié</a>
        </div>
    </div>
</div>
{% endblock %}